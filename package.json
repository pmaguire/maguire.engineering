{
	"name": "maguire.engineering",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "vite --open",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint \"**/*.{cjs,html,js,md,mjs,svelte,ts}\"",
		"format": "prettier --write .",
		"test": "npm run test:unit && npm run test:integration",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"typecheck": "npm run check && tsc",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.4",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-markdown": "^3.0.1",
		"eslint-plugin-svelte": "^2.30.0",
		"husky": "^8.0.3",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource-variable/noto-sans-display": "^5.0.18",
		"svelte-persisted-store": "^0.7.0"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"singleQuote": true,
		"printWidth": 100,
		"semi": false,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	},
	"lint-staged": {
		"*.{cjs,html,js,md,mjs,svelte,ts}": "eslint --fix",
		"**/*": [
			"prettier --write --ignore-unknown"
		]
	}
}
